{
  "manifest_version": 3,
  "name": "The AutoRia Price Analysis",
  "version": "0.2",
  "description": "The plugin for displaying analytics on the website auto.ria.com",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-64.png",
      "128": "icon-128.png"
    }
  },
  "permissions": ["activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
